{
  "name": "inplayer-ui",
  "version": "0.1.0",
  "description": "InPlayer React Components",
  "main": "build/index.js",
  "directories": {
    "src": "src"
  },
  "scripts": {
    "build": "babel src -d build",
    "build:watch": "babel src -w -d build",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint src/**; exit 0",
    "lint:js:watch": "esw -w src/**",
    "prepublishOnly": "yarn build",
    "review": "run-s lint test:clean test test:coverage:report",
    "lint:style": "stylelint -- \"./src/**/*.js\"",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest src/**; exit 0",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest src/** --watch",
    "test:watchAll": "jest src/** --watchAll",
    "test:coverage:report": "open ./coverage/lcov-report/index.html",
    "flow": "flow",
    "flow:watch": "flow-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inplayer-org/inplayer-ui"
  },
  "author": "Srdjan Rakic <srdjan@inplayer.com> (https://github.com/srdjanRakic)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inplayer-org/inplayer-ui/issues"
  },
  "homepage": "https://github.com/inplayer-org/inplayer-ui#readme",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/**/*.snap",
      "!src/blocks/index.js",
      "!src/blocks/Grid/index.js",
      "!src/components/index.js",
      "!src/utils/**",
      "!src/elements/index.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFiles": [
      "raf/polyfill",
      "./__tests__/config"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --ignore-path ./.eslintignore --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn styleguide:build && git add docs && git commit --amend --no-edit"
    }
  },
  "peerDependencies": {
    "polished": "^1.9.2",
    "react-fontawesome": "^1.6.1",
    "styled-components": "^3.3.2",
    "styled-components-modifiers": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-react-app": "^3.0.3",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-watch": "^4.0.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.82.0",
    "flow-watch": "^1.1.3",
    "fontfaceobserver": "^2.0.13",
    "husky": "^1.1.1",
    "jest": "^23.1.0",
    "jest-styled-components": "^6.2.1",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "polished": "^2.2.0",
    "prettier": "^1.13.5",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-fontawesome": "^1.6.1",
    "react-styleguidist": "^7.0.17",
    "react-test-renderer": "^16.4.0",
    "rimraf": "^2.6.2",
    "styled-components": "^3.3.2",
    "styled-components-modifiers": "^1.0.1",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "webpack": "^4.12.0"
  }
}
