{
  "name": "@inplayer-org/inplayer-ui",
  "version": "0.1.0",
  "author": "InPlayer",
  "description": "InPlayer React UI Components",
  "main": "build/bundle.js",
  "directories": {
    "src": "src"
  },
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch --progress",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint src/**",
    "lint:js:watch": "esw -w src/**",
    "prepublishOnly": "yarn build",
    "review": "run-s lint test:clean test test:coverage:report",
    "lint:style": "stylelint -- \"./src/**/*.js\"",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest src/**; exit 0",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest src/** --watch",
    "test:watchAll": "jest src/** --watchAll",
    "test:coverage:report": "open ./coverage/lcov-report/index.html",
    "flow": "flow",
    "flow:watch": "flow-watch",
    "generate:docs": "yarn styleguide:build && git add docs && git commit --amend --no-edit",
    "postinstall": "flow-typed install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inplayer-org/inplayer-ui"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inplayer-org/inplayer-ui/issues"
  },
  "homepage": "https://github.com/inplayer-org/inplayer-ui#readme",
  "jest": {
    "testMatch": [
      "**/tests/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)"
    ],
    "collectCoverage": true,
    "moduleNameMapper": {
      "^components(.*)$": "<rootDir>/src/components$1",
      "^elements(.*)$": "<rootDir>/src/elements$1",
      "^blocks(.*)$": "<rootDir>/src/blocks$1",
      "^modifiers(.*)$": "<rootDir>/src/modifiers$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^helpers(.*)$": "<rootDir>/tests/helpers$1",
      "^config(.*)$": "<rootDir>/config$1"
    },
    "collectCoverageFrom": [
      "src/**",
      "!src/**/*.snap",
      "!src/blocks/index.js",
      "!src/blocks/Grid/index.js",
      "!src/components/index.js",
      "!src/utils/**",
      "!src/elements/index.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFiles": [
      "raf/polyfill",
      "./tests/config"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "peerDependencies": {
    "polished": "^2.2.0",
    "react-fontawesome": "^1.6.1",
    "styled-components": "^3.4.10",
    "styled-components-modifiers": "^1.0.1",
    "styled-tools": "^1.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-syntax-class-properties": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.8.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-webpack-alias": "^2.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-react-app": "^3.0.3",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-watch": "^4.0.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.82.0",
    "flow-typed": "^2.5.1",
    "flow-watch": "^1.1.3",
    "fontfaceobserver": "^2.0.13",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.1",
    "npm-run-all": "^4.1.3",
    "polished": "^2.2.0",
    "prettier": "^1.13.5",
    "prettierrc": "^0.0.0-5",
    "raf": "^3.4.0",
    "react": "^16.4.0",
    "react-addons-shallow-compare": "^15.6.2",
    "react-dates": "12.7.0",
    "react-dom": "^16.4.0",
    "react-fontawesome": "^1.6.1",
    "react-styleguidist": "^7.3.10",
    "react-test-renderer": "^16.4.0",
    "react-toggle": "^4.0.2",
    "rimraf": "^2.6.2",
    "styled-components": "^3.4.10",
    "styled-components-modifiers": "^1.0.1",
    "styled-tools": "^1.5.2",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.1.2"
  }
}
